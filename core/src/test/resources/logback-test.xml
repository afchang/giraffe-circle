<configuration>
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="com.palantir.giraffe" level="DEBUG"/>

    <root level="OFF">
        <appender-ref ref="stdout"/>
    </root>
</configuration>
